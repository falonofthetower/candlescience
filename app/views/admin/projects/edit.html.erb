<main>
  <div class="column">
    <%= bootstrap_form_for [:admin, @project] do |f| %>
      <header>
        <h1>Add new Project</h1>
      </header>
      <fieldset class="form-group">
        <%= f.text_field :title, label: "title" %>
        <%= f.text_area :text, size: "10x15", label: "Project Text" %>
        <%= f.submit "Save Edits", class: "btn btn-primary" %>
        <%= link_to "Delete Project", { action: :destroy, id: @project.id }, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
      </fieldset>
    <% end %>
  </div>

</main>

