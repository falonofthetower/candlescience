<main>
  <div class="column">
    <%= bootstrap_form_for [:admin, @skill] do |f| %>
      <header>
        <h1>Add new skill</h1>
      </header>
      <fieldset class="form-group">
        <%= f.text_field :title, label: "title" %>
        <%= f.text_area :text, size: "10x15", label: "Skill Text" %>
        <%= f.submit "Save Edits", class: "btn btn-primary" %>
        <%= link_to "Delete Skill", { action: :destroy, id: @skill.id }, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
      </fieldset>
    <% end %>
  </div>
</main>

