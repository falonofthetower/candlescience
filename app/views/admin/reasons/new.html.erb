<main>
  <div class="column">
    <%= bootstrap_form_for [:admin, @reason] do |f| %>
      <header>
        <h1>Add new Reason</h1>
      </header>
      <fieldset class="form-group">
        <%= f.text_field :header, label: "Header" %>
        <%= f.text_area :text, size: "10x15", label: "Reason Text" %>
        <%= f.submit "Create Reason", class: "btn btn-primary" %>
      </fieldset>
    <% end %>
  </div>
</main>
