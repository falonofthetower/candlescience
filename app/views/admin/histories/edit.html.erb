<main>
  <div class="column">
    <%= bootstrap_form_for [:admin, @history] do |f| %>
      <header>
        <h1>Add new history</h1>
      </header>
      <fieldset class="form-group">
        <%= f.text_field :subject, label: "subject" %>
        <%= f.text_area :text, size: "10x15", label: "History Text" %>
        <%= f.submit "Save Edits", class: "btn btn-primary" %>
        <%= link_to "Delete History", { action: :destroy, id: @history.id }, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
      </fieldset>
    <% end %>
  </div>
</main>

