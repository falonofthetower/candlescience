<main>
  <div class="column">
    <%= bootstrap_form_for [:admin, @history] do |f| %>
      <header>
        <h1>Add new History</h1>
      </header>
      <fieldset class="form-group">
        <%= f.text_field :subject, label: "Subject" %>
        <%= f.text_area :text, size: "10x15", label: "History Text" %>
        <%= f.submit "Create History", class: "btn btn-primary" %>
      </fieldset>
    <% end %>
  </div>
</main>
